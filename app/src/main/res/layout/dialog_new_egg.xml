<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="@dimen/eight"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/eight">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="@dimen/forty_eight"
                android:layout_height="@dimen/forty_eight"
                android:src="@drawable/ic_egg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/forty_eight"
                android:layout_weight="1"
                android:text="@string/new_egg"
                android:textStyle="bold"
                android:textSize="@dimen/text_twenty_four"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/eight"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/details"
            android:layout_below="@id/bird_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/eight">
                <TextView
                    android:text="@string/egg_id"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/nest_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/eight"
                    />
                <TextView
                    android:text="@string/laid_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/egg_laid_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/eight"
                    android:drawableEnd="@drawable/ic_baseline_today_24"
                    android:drawableTint="@color/blue_300"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="@dimen/eight">
                <TextView
                    android:text="@string/mating_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/mating_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/eight"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"

                    />
                <TextView
                    android:text="@string/start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/egg_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/eight"
                    android:drawableEnd="@drawable/ic_baseline_today_24"
                    android:drawableTint="@color/blue_300"
                    />



                <Button
                    android:id="@+id/save_mating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/eight"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</ScrollView>
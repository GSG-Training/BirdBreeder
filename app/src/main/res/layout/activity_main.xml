<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".View.ui.Activites.MainActivity.MainActivity">

  <FrameLayout
      android:layout_above="@id/navigator"
      android:background="@drawable/splash_background"
      android:id="@+id/main_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/navigator"
      style="@style/Widget.MaterialComponents.BottomNavigationView.Colored"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="@color/main_color"
      app:itemIconSize="@dimen/thirty_two"
      app:itemIconTint="@color/white_grey"
      app:itemTextAppearanceActive="@style/Theme.BirdBreeder.TextStyle"
      app:itemTextColor="@color/white_grey"
      app:labelVisibilityMode="labeled"
      app:menu="@menu/bottom_menu" />
</RelativeLayout>
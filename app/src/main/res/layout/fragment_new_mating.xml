<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NewMatingFragment"
    android:padding="@dimen/four"
    >
<include
    android:id="@+id/mating_card"
    layout="@layout/mating_item"/>
    <ImageView
        android:id="@+id/icon"
        android:layout_margin="@dimen/eight"
        android:layout_width="@dimen/fifty_six"
        android:layout_height="@dimen/fifty_six"
        android:layout_below="@id/mating_card"
        android:src="@drawable/ic__chick"
        app:tint="@color/blue_300"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/eggs_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mating_card"
        android:layout_alignBottom="@+id/icon"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/icon"
        android:gravity="center_vertical"
        android:text="@string/current_eggs"
        android:textSize="@dimen/text_twenty_four"
        android:textStyle="bold" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/new_egg_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/eggs_txt"
        android:layout_alignTop="@id/icon"
        android:layout_marginEnd="@dimen/sixteen"
        android:src="@drawable/ic_baseline_post_add_24"
        app:elevation="@dimen/four" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/egg_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/egg_item" />

</RelativeLayout>
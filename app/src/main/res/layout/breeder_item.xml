<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/two"
    android:backgroundTint="@color/grey_100"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:padding="@dimen/eight"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eight">

            <ImageView
                android:id="@+id/ps_profile_image"
                android:layout_width="@dimen/forty_eight"
                android:layout_height="@dimen/forty_eight"
                android:background="@drawable/circle"
                android:src="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/ps_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/eight"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/user_name"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ps_fav"
                android:layout_width="@dimen/forty_eight"
                android:layout_height="@dimen/forty_eight"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_baseline_star"
                app:tint="@color/brown" />
        </TableRow>

        <TextView
            android:id="@+id/br_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/four"
            android:text="@string/dummy_text" />
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/four">
            <TextView
                android:id="@+id/br_own_species_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_twenty_four"
                android:textStyle="bold"
                android:textColor="@color/reddish_brown"
                android:text="@string/dummy_num"/>
            <TextView
                android:id="@+id/br_sale_birds_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_twenty_four"
                android:textColor="@color/reddish_brown"
                android:textStyle="bold"
                android:text="@string/dummy_num"/>
        </TableRow>
       <TableRow
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/four">
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:gravity="center_horizontal"
               android:text="@string/own_species"/>
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:gravity="center_horizontal"
               android:text="@string/sale_bird"/>
       </TableRow>


    </TableLayout>

</androidx.cardview.widget.CardView>

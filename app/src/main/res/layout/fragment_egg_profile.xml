<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/eight"
    tools:context=".View.ui.Birds.EggProfileFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/eight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/eight">
                    <TextView
                        android:text="@string/egg_id"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:background="@color/grey"
                        android:id="@+id/show_egg_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="@dimen/eight"
                        />
                    <TextView
                        android:text="@string/mating_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:id="@+id/egg_status_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/eight"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                        android:background="@drawable/rectangle"
                        />
                    <TextView
                        android:text="@string/laid_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/egg_laid_date"
                        android:editable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/eight"
                        android:drawableEnd="@drawable/ic_baseline_today_24"
                        />


                    <TextView
                        android:text="@string/expect_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/egg_start_date"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/eight"
                        android:drawableEnd="@drawable/ic_baseline_today_24"
                        />



                    <Button
                        android:id="@+id/save_egg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/save"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/sixteen"/>
                </LinearLayout>
            </LinearLayout>






    </ScrollView>
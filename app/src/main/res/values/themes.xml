<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BirdBreeder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/grey_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_100</item>
        <item name="colorSecondaryVariant">@color/blue_300</item>
        <item name="colorOnSecondary">@color/dark_brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="cardViewStyle">@style/Theme.BirdBreeder.Card</item>
        <item name="android:textViewStyle">@style/Theme.BirdBreeder.TextStyle</item>
        <item name="editTextStyle">@style/Theme.BirdBreeder.InputText</item>
        <item name="buttonStyle">@style/Theme.BirdBreeder.Button</item>
        <item name="materialButtonStyle">@style/Theme.BirdBreeder.Button</item>

    </style>

    <style name="Theme.BirdBreeder.Button"   parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/cairoregular</item>
        <item name="android:textSize">@dimen/text_twenty_four</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/text_twelve</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/sixteen</item>
        <item name="android:paddingEnd">@dimen/sixteen</item>
    </style>

    <style name="Theme.BirdBreeder.InputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:fontFamily">@font/cairoregular</item>
        <item name="android:layout_height">@dimen/thirty_two</item>
        <item name="android:textSize">@dimen/text_sixteen</item>
        <item name="android:padding">@dimen/eight</item>
        <item name="android:textColor">@color/dark_brown</item>
        <item name="hintTextColor">@color/blue_300</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Theme.BirdBreeder.ToolBarText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/cairoregular</item>
        <item name="android:textSize">@dimen/text_sixteen</item>
        <item name="android:textColor">@color/grey_200</item>
        <item name="android:textColorHint">@color/grey_200</item>

    </style>

    <style name="Theme.BirdBreeder.TextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/cairoregular</item>
        <item name="android:textSize">@dimen/text_sixteen</item>
        <item name="android:textColor">@color/blue_300</item>
    </style>

    <style name="Theme.BirdBreeder.Card" parent="Base.CardView">
        <item name="contentPadding">@dimen/zero</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/eight</item>
        <item name="cardElevation">@dimen/four</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>
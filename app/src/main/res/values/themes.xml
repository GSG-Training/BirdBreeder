<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BirdBreeder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/grey_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_100</item>
        <item name="colorSecondaryVariant">@color/blue_300</item>
        <item name="colorOnSecondary">@color/dark_brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="cardViewStyle">@style/Theme.BirdBreeder.Card</item>
        <item name="spinnerStyle">@style/Theme.BirdBreeder.Spinner</item>
        <item name="android:textViewStyle">@style/Theme.BirdBreeder.TextStyle</item>
        <item name="editTextStyle">@style/Theme.BirdBreeder.InputText</item>
        <item name="buttonStyle">@style/Theme.BirdBreeder.Button</item>
        <item name="materialButtonStyle">@style/Theme.BirdBreeder.Button</item>
        <item name="background">@color/main_background</item>

    </style>

    <style name="Theme.BirdBreeder.Button"   parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_sixteen</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/two</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/eight</item>

    </style>

    <style name="Theme.BirdBreeder.InputText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_twelve</item>
        <item name="minWidth">@dimen/forty_eight</item>
        <item name="android:paddingStart">@dimen/twenty_four</item>
        <item name="paddingEnd">@dimen/twenty_four</item>
        <item name="android:paddingTop">@dimen/sixteen</item>
        <item name="android:paddingBottom">@dimen/sixteen</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:editable">true</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:enabled">true</item>
    </style>



    <style name="Theme.BirdBreeder.ToolBarText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_sixteen</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>

    </style>

    <style name="Theme.BirdBreeder.TextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_sixteen</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.BirdBreeder.Card" parent="Base.CardView">
        <item name="contentPadding">@dimen/zero</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/eight</item>
        <item name="cardElevation">@dimen/two</item>
        <item name="android:clipToPadding">false</item>
        <item name="tint">@color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>


    <style name="Theme.BirdBreeder.Spinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_twelve</item>
        <item name="minWidth">@dimen/forty_eight</item>
        <item name="android:paddingStart">@dimen/twenty_four</item>
        <item name="paddingEnd">@dimen/twenty_four</item>
        <item name="android:paddingTop">@dimen/sixteen</item>
        <item name="android:paddingBottom">@dimen/sixteen</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:enabled">true</item>
        <item name="android:popupBackground">@drawable/rectangle</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>
</resources>